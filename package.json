{
  "name": "karacho-vscode",
  "displayName": "karacho-vscode",
  "description": "Language support for the Karacho Template engine",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.70.0"
  },
  "publisher": "XP.LIVE",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xpectme/karacho-vscode"
  },
  "contributes": {
    "languages": [
      {
        "id": "karacho",
        "icon": {
          "dark": "./icons/karacho.png",
          "light": "./icons/karacho.png"
        },
        "aliases": [
          "Karacho",
          "karacho"
        ],
        "extensions": [
          ".kch",
          ".karacho",
          ".karacho.html",
          ".kohtml",
          ".kohtm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "karacho",
        "scopeName": "text.html.karacho",
        "path": "./syntaxes/karacho.tmLanguage.json"
      }
    ]
  }
}
